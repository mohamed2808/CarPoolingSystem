@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Carpooling | Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  

    <header class="text-center py-5 bg-light">
        <h1 class="display-4">Find & Share Rides Easily!</h1>
        <p class="lead">Save money and travel together.</p>
        <form class="d-flex justify-content-center">
            <input type="text" class="form-control w-25 me-2" placeholder="From">
            <input type="text" class="form-control w-25 me-2" placeholder="To">
            <input type="date" class="form-control me-2">
            <button class="btn btn-primary">Search</button>
        </form>
    </header>

    <div class="container mt-5">
        <h2 class="text-center">Recent Rides</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Aswan → Cairo</h5>
                        <p>Seats Available: 2 | Departure: 10 AM</p>
                        <button class="btn btn-success">Book Now</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Giza → Alexandria</h5>
                        <p>Seats Available: 3 | Departure: 1 PM</p>
                        <button class="btn btn-success">Book Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
