@model CarPoolingSystem.BusinessLogic.Models.RideDtos.CreateRideDTO

@{
    ViewBag.Title = "Offer a Ride";
}

<div class="container mt-5">
    <h2>Offer a New Ride</h2>
    <form method="post" action="@Url.Action("OfferRide", "Ride")">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Origin</label>
            <input type="text" class="form-control" asp-for="Origin" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Destination</label>
            <input type="text" class="form-control" asp-for="Destination" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ride Date and Time</label>
            <input type="datetime-local" class="form-control" asp-for="DateTime" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" step="0.01" class="form-control" asp-for="Price" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Available Seats</label>
            <input type="number" class="form-control" asp-for="SeatsAvailable" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Offer Ride</button>
    </form>
</div>
