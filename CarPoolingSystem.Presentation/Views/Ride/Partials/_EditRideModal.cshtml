<div class="modal fade" id="editRideModal" tabindex="-1" aria-labelledby="editRideModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" action="@Url.Action("Edit", "Ride")">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Ride</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editRideId" />

                    <div class="mb-3">
                        <label>From:</label>
                        <input type="text" name="Origin" id="editRideOrigin" class="form-control" required readonly />
                    </div>

                    <div class="mb-3">
                        <label>To:</label>
                        <input type="text" name="Destination" id="editRideDestination" class="form-control" required readonly />
                    </div>

                    <div class="mb-3">
                        <label>Date & Time:</label>
                        <input type="datetime-local" name="DateTime" id="editRideDateTime" class="form-control" required readonly />
                    </div>

                    <div class="mb-3">
                        <label>Seats Available:</label>
                        <input type="number" name="SeatsAvailable" id="editRideSeats" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Price:</label>
                        <input type="number" name="Price" step="0.01" id="editRidePrice" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
