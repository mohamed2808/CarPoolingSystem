@{
    ViewData["Title"] = "Assign Roles";
}

<h2>Assign Roles to @Model.User.UserName</h2>

<form method="post">
    <div class="form-group">
        <label for="roles">Select Roles:</label>
        <select multiple class="form-control" id="roles" name="selectedRoles">
            @foreach (var role in Model.AllRoles)
            {
                @role.Nam@(Model.UserRoles.Contains(role.Name) ? "selected" : "")
            }
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
